extends test-layout

block test-content
	h1 User
		span(style='font-size: .75em;')
			| &nbsp;(&nbsp;
			a(href='create') C
			| &nbsp;|&nbsp;
			a(href='retrive') R
			| &nbsp;|&nbsp;
			a(href='update') U
			| &nbsp;|&nbsp;
			a(href='delete') D
			| &nbsp;)
			
	.panel.panel-primary
		.panel-heading
			.panel-title create
		.panel-body
			form(action='create',method='post')
				form
					.form-group
						label Email
						input.form-control(type='email',name='email')
					.form-group
						label Password
						input.form-control(type='text',name='password')
					button.btn.btn-default(type='submit') Create

	.panel.panel-default
		.panel-heading
			.panel-title output
		.panel-body
			p= _id